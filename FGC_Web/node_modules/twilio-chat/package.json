{
  "name": "twilio-chat",
  "version": "6.0.0",
  "description": "Twilio Chat service client library",
  "main": "./builds/lib.js",
  "browser": "./builds/browser.js",
  "react-native": "./dist/index.js",
  "types": "./builds/lib.d.ts",
  "author": "Twilio",
  "license": "MIT",
  "files": [
    "docs",
    "dist",
    "builds/**/*.d.ts",
    "builds/**/*.js",
    "builds/**/*.map",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "rm -rf ./coverage ./dist ./builds ./docs",
    "lint": "npx tslint -p ./tslint.json",
    "lint:fix": "npx tslint -p ./tslint.json",
    "test:unit": "env FORCE_COLOR=1 NODE_ENV=test npx nyc --report-dir coverage/unit ./node_modules/.bin/mocha test/unit/index.ts",
    "test:integration:mocha": "env FORCE_COLOR=1 NODE_ENV=test npx nyc --report-dir coverage/integration ./node_modules/.bin/mocha test/integration/index.ts",
    "test:integration": "yarn test:integration:mocha",
    "build": "npx rollup -c",
    "sourceMapReport:html": "npx source-map-explorer@2.5.2 ./builds/lib.js --html ./builds/lib.report.html",
    "sourceMapReport:json": "npx source-map-explorer@2.5.2 ./builds/lib.js --json ./builds/lib.report.json",
    "docs": "npx typedoc && npx ts-node docs-postprocess.ts",
    "ci": "yarn clean && yarn lint && yarn build && yarn sourceMapReport:html && yarn sourceMapReport:json && yarn docs",
    "precommit": "yarn lint:fix && yarn test:unit && yarn test:integration"
  },
  "dependencies": {
    "@babel/runtime": "^7.14.5",
    "@twilio/declarative-type-validator": "^0.1.10",
    "@twilio/mcs-client": "^0.5.2",
    "@twilio/notifications": "^1.0.4",
    "@twilio/operation-retrier": "^4.0.6",
    "@twilio/replay-event-emitter": "^0.2.3",
    "core-js": "^3.17.3",
    "iso8601-duration": "=1.2.0",
    "lodash.isequal": "^4.5.0",
    "loglevel": "^1.6.6",
    "platform": "^1.3.6",
    "twilio-sync": "^3.0.6",
    "twilsock": "^0.12.1",
    "uuid": "^3.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.14.5",
    "@babel/preset-env": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@types/chai": "^4.2.5",
    "@types/chai-as-promised": "^7.1.2",
    "@types/chai-string": "^1.4.1",
    "@types/lodash.isequal": "^4.5.5",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.12",
    "@types/sinon": "^10.0.0",
    "@types/sinon-chai": "^3.2.2",
    "async": "^3.0.1",
    "async-test-tools": "^1.0.7",
    "backoff": "^2.5.0",
    "browserslist": "^4.17.3",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-spies": "^1.0.0",
    "chai-string": "^1.5.0",
    "cheerio": "^1.0.0-rc.2",
    "dotenv": "^10.0.0",
    "fancy-log": "^1.3.3",
    "glob": "^7.1.7",
    "isomorphic-form-data": "^2.0.0",
    "mocha": "^6.2.2",
    "mocha.parallel": "^0.15.6",
    "node-fetch": "^2.6.1",
    "nyc": "^14.1.1",
    "rollup": "^2.51.1",
    "rollup-plugin-polyfill-node": "^0.6.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-ts": "^1.4.0",
    "sinon": "^9.2.4",
    "sinon-chai": "^3.3.0",
    "ts-node": "^8.5.2",
    "tslint": "^5.20.1",
    "twilio": "^3.37.1",
    "typedoc": "^0.21.4",
    "typescript": "^4.3.2"
  },
  "engines": {
    "node": ">=14"
  },
  "browserslist": [
    "IE 11",
    "last 3 Chrome versions",
    "last 3 Firefox versions",
    "last 3 Safari versions",
    "last 3 Edge versions",
    "last 2 iOS version",
    "last 2 ChromeAndroid version",
    "last 2 FirefoxAndroid version",
    "last 2 Samsung versions",
    "last 2 UCAndroid versions"
  ]
}
