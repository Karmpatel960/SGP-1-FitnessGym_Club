<div class="container">
  <h1 style="color: white;">My Orders</h1>
  <% if (orders.length > 0) { %>
    <table class="table">
      <thead>
        <tr>
          <th>Order ID</th>
          <th>Product Name</th>
          <th>Quantity</th>
          <th>Order Status</th>
          <th>Date Ordered</th>
        </tr>
      </thead>
      <tbody>
        <% orders.forEach(order => { %>
          <tr>
            <td><%= order.id %></td>
            <td><%= order.product_id %></td>
            <td><%= order.quantity %></td>
            <td><%= order.status%></td>
            <td><%= order.created_at.toLocaleString() %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <p>No orders found.</p>
  <% } %>
</div>

